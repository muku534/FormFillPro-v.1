{
  "manifest_version": 3,
  "name": "FormFill Pro",
  "version": "1.0.0",
  "description": "Privacy-first fake data form filler for QA engineers and developers. Fill forms instantly with realistic test data.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "commands": {
    "fill-all-forms": {
      "suggested_key": {
        "default": "Alt+Shift+F",
        "mac": "Alt+Shift+F"
      },
      "description": "Fill all form fields on the page"
    }
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/swagger.js",
        "lib/smart-analyzer.js",
        "lib/response-templates.js",
        "lib/user-profile.js",
        "lib/ai-provider.js",
        "lib/smart-filler.js",
        "lib/application-questions.js",
        "content/content.js"
      ],
      "css": ["content/content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
